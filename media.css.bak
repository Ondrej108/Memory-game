/*===== MOBILE =====*/

/* ===== BASE STYLES ===== */

@media (max-width: 480px) {
  /* ===== LAYOUT ===== */

  .container {
    flex-direction: column;
    border: solid 1px;
  }

  .main-content {
    border: solid 1px;
  }

  /* ===== HEADER ===== */

  /* ===== SIDEBARS ===== */

  .sidebar-left {
    visibility: hidden;
    display: none;
  }

  .sidebar-right {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    padding: 0;

    gap: 15px;
    width: 100%;
    border: solid 1px;
  }

  /* ===== BUTTONS ===== */

  .button-start,
  .button-reset,
  .timer {
    margin: 5px 0;
    height: 45px;
    width: 100px;
    font-size: 12px;
  }

  .language-selector {
    display: flex;
    flex-direction: column;
  }

  .lang-btn {
    font-size: 10px;
  }

  /* ===== TIMER ===== */

  .timer {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    border: solid 1px;
    border-radius: 5px;
  }

  /* ===== GAME CARDS ===== */

  .cards-section {
    grid-template-columns: repeat(2, 1fr);
  }

  .game-cards img {
    width: 100%;
    height: 100%px;
  }

  .game-cards img.hidden1 {
    background-size: cover;
  }

  /* ===== MATCH/NO-MATCH MESSAGES ===== */

  .match,
  .end-game {
    padding: 0 10px;
  }

  .match-green,
  .no-match-red {
    text-align: center;
    font-size: 44px;
    line-height: 1.1;
  }

  /* ===== END GAME MESSAGE ===== */

  /* ===== FOOTER ===== */

  .footer-text {
    font-size: 14px;
  }

  /* Dimmed cards when match/no-match shows */

  /* Card states */

  .game-cards img.hidden1 {
    height: auto;
    width: 100%;
    /* background-size: contain;
    background-position: center;
    background-repeat: no-repeat; */
  }
}

